// 背景图片
bg-image($url)
  background-image: url($url + "@2x.png")
  // 设备像素比大于3时
  @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
    background-image: url($url + "@3x.png")

// 文本溢出显示'...'
no-wrap()
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap
// 多行文本溢出
no-wrap-multi($n)
  display: -webkit-box !important
  -ms-text-overflow: ellipsis
  text-overflow: ellipsis
  overflow: hidden
  word-break: break-all
  -webkit-box-orient: vertical
  -webkit-line-clamp: $n
   // 可显示行数

// 扩展点击区域
extend-click()
  position: relative
  &:before
    content: ''
    position: absolute
    top: -10px
    left: -10px
    right: -10px
    bottom: -10px

// 0.5像素边框
thick-line-top()
  position: relative
  &:before
    content: ''
    display: inline-block
    position: absolute
    left: 0
    top: 0
    width: 100%
    height: 1px
    transform: scaleY(0.3)
    background: $color-text-d
thick-line-bottom()
  position: relative
  &:after
    content: ''
    display: inline-block
    position: absolute
    left: 0
    bottom: 0
    width: 100%
    height: 1px
    transform: scaleY(0.3)
    background: $color-text-d